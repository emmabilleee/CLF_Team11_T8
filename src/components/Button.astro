---
const { variant, link } = Astro.props;
---

<a class={variant} href={link}><slot /></a>

<style>
  .primary {
    background-color: #000026;
    color: white;
    font-family: "Signika", sans-serif;
    font-size: 0.6rem;
    font-weight: 400;
    padding: 10px 35px;
    border: solid 1px white;
    box-shadow: 0 0 20px 10px white;
  }
      @media (min-width: 800px) {

   .primary {
    background-color: #000026;
    color: white;
    font-family: "Signika", sans-serif;
    font-size: 20px;
    font-weight: 400;
    padding: 20px 60px;
    border: solid 1px white;
    box-shadow: 0 0 20px 10px white;
  }
  
  .primary:hover{
    background-color: white;
    color: black;
  }}
  a {
    text-decoration: none;
  }

  .secondary {
    background-color: black;
    color: white;
    font-family: "Signika", sans-serif;
    font-size: 0.7rem;
    font-weight: 400;
    padding: 15px 20px;
    border: solid 1px #7D65D0;
    box-shadow: 0 0 20px 10px #7D65D0;
   
  }



.third{
    background-color: #000026;
    color: white;
    font-family: "Signika", sans-serif;
    font-size: 0.8rem;
    font-weight: 400;
    padding: 30px 60px;
    border: solid 1px white;
    box-shadow: 0 0 20px 5px white;
    text-align: center;
    margin: auto;
    gap: 10px;
  }


  .third:hover{
 background-color: white;
    color: black;  
}

  .fourth{
    background-color: #000026;
    color: white;
    font-family: "Signika", sans-serif;
    font-size: 1rem;
    font-weight: 400;
    padding: 20px 40px;
    border: solid 1px white;
    text-align: center;

  }
  .fourth:hover{
    background-color: black;
        box-shadow: 0 0 20px 5px white;


  }
</style>
