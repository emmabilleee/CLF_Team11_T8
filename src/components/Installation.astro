const { data } = Astro.props;
console.log(data);
import Button from "./Button.astro";
---

<a href={`/installations/${data.slug}`}>
  <article>
    <div class="image_container">
    <img src={"/imgs/" + data.img} alt="" class="image"/></div>
    <h2>{data.artname}</h2>
    <!-- <Button variant="fourth">READ MORE</Button> -->
  </article>
</a>

<style>
  h2 {
    font-size: 15px;
    margin-top: 10px;
    margin-bottom: 30px;
  }


  article {
    text-align: center;
  }
  a{
    text-decoration: none;
  }
   @media (min-width: 800px)
  {
      h2 {
    font-size: 20px;
    margin-top: 10px;
    margin-bottom: 10px;
  }

 .image-container {
  position: relative;
  overflow: hidden;
}

.image {
  width: 100%; /* Ensure the image takes the full width of its container */
  transition: box-shadow 0.3s ease-out; /* Add transition for smooth effect */
  box-shadow: none; /* Initially no box shadow */
}

.image:hover {
  box-shadow: 0 0 20px white; /* Add box shadow on hover (white shadow) */
}

