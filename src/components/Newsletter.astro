---
import Button from "./Button.astro";
---
<section class="newsletter, mobile">
	<img src="https://copenhagenlightfestival.org/wp-content/uploads/2020/02/Trampoline_02-1.jpg" alt="">
	<h3 class="newsletter_header">Get updated about the festival! Sign up with your email below</h3>

   <form>
        <label for="first_name"></label>
        <input type="text" id="first_name" name="first_name" required placeholder="First name"><br><br>

        <label for="last_name"></label>
        <input type="text" id="last_name" name="last_name" required placeholder="Last name"><br><br>

        <label for="email"></label>
        <input type="email" id="email" name="email" required placeholder="Email address"><br><br>

        <input type="submit" value="SUBMIT" class="submit">
    </form>
	<Button></Button>
</section>
<style>

	.newsletter_header{
		font-size: 17px;
		line-height: 30px;
				margin-bottom: 30px;
                margin: 40px;

	}
	input{
		background-color: #D9D9D9;
		color: grey;
		padding: 10px;
		border: none;
        margin-left: 40px;

	}
	.submit{
        margin-left: 100px;	
        background-color: black;
        color:white
        }

        img{
        justify-content: center;
        }

</style>