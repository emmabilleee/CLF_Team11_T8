---
import Button from "./Button.astro";
---

<section class="newsletter mobile">
  <img class="newsletter_image" src="/imgs/newsletter.jpg" alt="newsletter_img" />

  <form>
    <h3 class="newsletter_header">Get updated about the festival! <br>Sign up with your email below</h3>

     <label for="email"></label>
    <input type="email" id="email" name="email" required placeholder="Email address" /><br /><br />

    <label for="first_name"></label>
    <input type="text" id="first_name" name="first_name" required placeholder="First name" /><br /><br />

    <label for="last_name"></label>
    <input type="text" id="last_name" name="last_name" required placeholder="Last name" /><br /><br />

   

    <input type="submit" value="Submit" class="submit" />
  </form>
  <Button />
</section>
<style>

  .newsletter_header {
    font-size: 15px;
    line-height: 30px;
    margin-bottom: 20px;
    margin-top: 30px;
    text-align: center;
  }
  input {
    background-color: #d9d9d9;
    color: rgb(47, 47, 47);
    padding: 15px 30px;
    border: none;
    border-radius: 10px;
     font-family: "Raleway", sans-serif;
  }
  .submit {
    background-color: black;
    color: white;
  font-family: "Raleway", sans-serif;
    font-size: 0.7rem;
    font-weight: 400;
    padding: 15px 20px;
    border: solid 1px #7D65D0;
    box-shadow: 0 0 20px 10px #7D65D0;
   border-radius: 10px;
  }

  .submit:hover{
    background-color: #7D65D0;
    color: black;
  }

  img {
    justify-content: center;
    margin-top: 30px;
          aspect-ratio: 1.5;
           width: 100%;
        height: auto;


  }
  .newsletter {
    margin-top: 200px;
    margin-bottom: 200px;
text-align: center;
      margin: 40px;
      margin-top: 110px;

  }

      @media (min-width: 800px)	{
  .newsletter_image {
      justify-content: center;
      width: 50%;
                aspect-ratio: 1.5;

        height: auto;
    }
    .newsletter {
    display: flex;
    grid-column: 1/1/-1;
    grid-row: 2;
    justify-content: center;
    gap: 50px;
 margin-top: 150px;
